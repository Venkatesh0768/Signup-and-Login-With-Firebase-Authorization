<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="20dp"
        android:text="Login in your account"
        android:textColor="#151515"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/belowtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Welcome! Please enter your details"
        android:textColor="#888888"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/tvusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Username"
        android:textColor="#151515"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <com.google.android.material.textfield.TextInputLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:boxStrokeColor="@color/yellow"
    app:hintTextColor="@color/yellow"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/userNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Unique ID"
        android:textStyle="normal"
        app:hintTextColor="@color/yellow" />

</com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnSignIn"
        android:layout_marginTop="25dp"
        android:layout_width="350dp"
        android:backgroundTint="#DB3542"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:textSize="15sp"
        android:text ="SIGN IN" />

    <TextView
        android:id="@+id/newaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="If you are new user Signup here"
        android:textColor="#888888"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>

</LinearLayout>